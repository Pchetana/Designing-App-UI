<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/relayout"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="wrap_content"

            android:src="@drawable/logbag" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relayout2"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/shape_left"
        app:layout_constraintTop_toBottomOf="@+id/relayout"></RelativeLayout>

    <LinearLayout
        android:id="@+id/logwin"
        android:layout_width="400dp"
        android:layout_height="399dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/ogin_shape"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"

        android:paddingTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/relayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="E-mail" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:text="Forgot Password"
            android:textColor="@color/color_blue" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:text="Login"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@+id/logwin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/relayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/lSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="SIGN UP"
                android:textColor="@color/color_pink"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@android:color/transparent"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/relayout"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>